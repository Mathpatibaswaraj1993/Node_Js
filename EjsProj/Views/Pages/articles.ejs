<%- include('../partials/header.ejs') %>
    <main class="container py-5 text-center">

        <p class="text-danger">Welcome to my Articles Page...</p>
        <form action="/articles" method="post">
            <input type="text" name="artname" placeholder="Search..." />
            <button type="submit">Search</button>
        </form>
        <ul>
            <% newarticle.forEach((e)=>{%>
                <li>
                    <h2>
                        <%=e.title %>
                    </h2>
                    <p>
                        <%=e.description %>
                    </p>
                </li>
                <% })%>
        </ul>

    </main>

